<Window x:Class="Emojo.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Emojo.WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="47*"/>
            <RowDefinition Height="53*"/>
            <RowDefinition Height="55*"/>
            <RowDefinition Height="164*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="112*"/>
            <ColumnDefinition Width="405*"/>
        </Grid.ColumnDefinitions>

        <TextBlock FontSize="24" VerticalAlignment="Center" Margin="10,8,10,7" Height="32">Логин:</TextBlock>
        <TextBox Name="textBoxLogin" Grid.Column="1" Margin="5" FontSize="24"></TextBox>
        <Button Name="buttonAdd" Grid.Row="1" Grid.Column="1" Width="80" FontSize="24" Margin="0,5,5,5" HorizontalAlignment="Right" Click="buttonAdd_Click">ADD</Button>
    </Grid>
</Window>
